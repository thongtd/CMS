                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="related">
                    @if (relatedProducts.Any())
                    {
                        foreach (var related in relatedProducts)
                        {
                            var productUrl = Url.Action("ProductDetail", "Home", new { slug = related.Slug });
                            <div class="item">
                                <img src="@related.Thumbnail" title="@related.Title" alt="@related.Slug"/>
                                <h2>
                                    <a href="@productUrl" title="@related.Name">
                                        @related.Name
                                    </a>
                                </h2>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
        <div class="col-xs-12 col-md-9">
            <div id="page-content-wrapper">
                <div class="container-fluid products-detail">
                    <div class="row">
                        <div class="col-md-12">
                            <h1 class="name">
                                @product.Name
                            </h1>
                        </div>
                        <div class="col-md-6">
                            <div class="fotorama" data-nav="thumbs" data-allowfullscreen="true">
                                @if (product.Images != null)
                                {
                                    foreach (var image in product.Images)
                                    {
                                        <img src="@image" title="@product.Name" alt="@product.Name">
                                    }
                                }
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="product-subcontent">
                                @Html.Raw(product.SubContent)
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="product-content">
                            @Html.Raw(product.BodyContent)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>