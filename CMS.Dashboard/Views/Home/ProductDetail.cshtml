                        <div class="panel-section">
                            <div class="panel-heading">
                                <h2 class="cur-pointer accordion-toggle" data-toggle="collapse" data-target="#collapse4">
                                    Thịt bò
                                </h2>
                            </div>
                            <div id="collapse4" class="collapse" style="height: auto;">
                                <div class="panel-body">
                                    <div class="form-group">
                                        <div class="item">
                                            <a href="#">Thịt bò 1</a>
                                        </div>
                                        <div class="item">
