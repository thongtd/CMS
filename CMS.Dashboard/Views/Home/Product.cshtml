        <div class="col-xs-12 col-md-9">
            <div id="page-content-wrapper">
                <div class="container-fluid products">
                    @if (products.Any())
                    {
                        for (int i = 0; i < products.Count(); i++)
                        {
                            if (i == 0 || i == 3)
                            {
                                @Html.Raw("<div class=\"row\">")
                            }
                            <div class="col-md-4 col-xs-12 item">
                                <div class="thumbs">
                                    <a href="#">
                                        <img src="@products[i].Thumbnail" title="@products[i].Name" alt="@products[i].Slug" />
                                    </a>
                                </div>
                                <div class="decs">
                                    <a href="" class="name" title="@products[i].Name">
                                        @products[i].Name
                                    </a>
                                    <div class="package-price">
                                        @if (products[i].Discount > 0)
                                        {
                                            <p class="price">
                                                <label>Giá cũ: <strong>@products[i].Price.ToString("#,##0") VNĐ/Kg</strong></label>
                                            </p>
                                            <p class="price">
                                                @if (products[i].DiscountType == (int)DiscountType.Value)
                                                {
                                                    <label>Giá mới: <strong>@((products[i].Price - products[i].Discount).ToString("#,##0")) VNĐ/Kg</strong></label>
                                                }
                                                else if (products[i].DiscountType == (int)DiscountType.Percent)
                                                {
                                                    <label>Giá mới: <strong>@((products[i].Price - (products[i].Price * (products[i].Discount / 100))).ToString("#,##0")) VNĐ/Kg</strong></label>
                                                }
                                            </p>
                                        }
                                        else
                                        {
                                            <p class="price">
                                                <label>Đơn giá: <strong>@products[i].Price.ToString("#,##0") VNĐ/Kg</strong></label>
                                            </p>
                                        }
                                        <div class="clearfix"></div>
                                        <p>
                                            <a href="#" class="add-to-cart">Cho vào giỏ</a>
                                        </p>
                                    </div>
                                </div>
                            </div>
                            if (i == 2 || i == 5)
                            {
                                @Html.Raw("</div>")
                            }
                        }
                    }
