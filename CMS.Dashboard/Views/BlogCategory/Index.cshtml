@{
    ViewBag.Title = "Danh sách nhóm tin";
    Layout = "/Views/Shared/_Layout.cshtml";
}
<div class="breadLine">
    <ul class="breadcrumb">
        <li><a href="#">Trang chủ</a> <span class="divider">></span></li>
        <li class="active">Danh sách nhóm tin</li>
    </ul>
</div>
<div class="workplace">
    <div class="row-fluid">
        <form action="" method="post">
            <div class="span12">
                <div class="block-fluid table-sorting" style="display: inline-block; width: 100%;">
                    <div class="head">
                        <a href="@Url.Action("Create", "BlogCategory")" class="btn btn-flat btn-create iframe-fancybox">Thêm mới</a>
                    </div>
                    <div id="example">
                        <div id="grid"></div>
                        @section scripts{
                            <script>
                                $(document).ready(function () {
                                    $("#grid").kendoGrid({
                                        dataSource: {
                                            transport: {
                                                read: "/BlogCategory/Gets"
                                            },
                                            pageSize: 20
                                        },
                                        maxheight: 550,
                                        scrollable: true,
                                        sortable: true,
                                        filterable: true,
                                        pageable: {
                                            input: true,
                                            numeric: false
                                        },
                                        columns: [
                                            {
                                                 field: "Id", title: "ID", width: "50px", filterable: false
                                            },
                                            {
                                                 field: "Name", title: "Tên nhóm tin"
                                            },
                                            {
                                                field: "CreatedDate", title: "Ngày tạo", filterable: false, width: "200px",
                                                template: "#= kendo.toString(kendo.parseDate(CreatedDate, 'yyyy-MM-dd'), 'dd-MM-yyyy') #"
                                            },
                                            //{
                                            //    field: "Thumbnail", title: "Hình ảnh",
                                            //    template: "<img src='#=Thumbnail#' style='width: 50px' />",
                                            //    filterable: false,
                                            //    width: "100px"
                                            //},
                                            {
                                                title: "Chức năng",
                                                template: "<a href=''><img src='/Content/Dashboard/img/icons/func/active.png' /></a>" +
                                                    "<a href=''><img src='/Content/Dashboard/img/icons/func/note-edit.png' /></a>" +
                                                    "<a href=''><img src='/Content/Dashboard/img/icons/func/trash.png' /></a>",
                                                attributes: {
                                                    "class": "td-func"
                                                },
                                                width: "110px",
                                                filterable: false
                                            }
                                        ]
                                    });
                                });
                            </script>
                        }
                    </div>
                    <div class="clear"></div>
                </div>
            </div>
        </form>
    </div>
</div>
